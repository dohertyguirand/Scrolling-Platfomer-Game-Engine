<Game>
    <Name>Flappy Bird</Name>
    <Thumbnail>flappy_bird_icon.png</Thumbnail>
    <Description>Play the classic game that got millions of people hooked</Description>
    <Entities>
        <ImageEntity>
            <Name>Bird</Name>
            <Width>50</Width>
            <Height>50</Height>
            <Image>flappybird.jpg</Image>
            <Movement>
                <MovementBehavior>Gravity 0 0.1</MovementBehavior>
            </Movement>
            <Controls>
                <ControlInput>
                    <Key>UpKey</Key>
                    <ControlBehavior>JumpBehavior -0.5</ControlBehavior>
                </ControlInput>
            </Controls>
            <Collisions>
                <EntityCollision>
                    <With>PipeUp</With>
                    <Reaction>RemoveSelf</Reaction>
                    <With>PipeDown</With>
                    <Reaction>RemoveSelf</Reaction>
                    <With>Floor</With>
                    <Reaction>RemoveSelf</Reaction>
                </EntityCollision>
            </Collisions>
        </ImageEntity>
        <ImageEntity>
            <Name>PipeUp</Name>
            <Width>75</Width>
            <Height>200</Height>
            <Image>pipe_up.png</Image>
            <Movement>
                <MovementBehavior>MoveForward -0.3 0</MovementBehavior>
            </Movement>
        </ImageEntity>
        <ImageEntity>
            <Name>PipeDown</Name>
            <Width>75</Width>
            <Height>200</Height>
            <Image>pipe_down.png</Image>
            <Movement>
                <MovementBehavior>MoveForward -0.3 0</MovementBehavior>
            </Movement>
        </ImageEntity>
        <ImageEntity>
            <Name>Floor</Name>
            <Width>100</Width>
            <Height>30</Height>
            <Image>floor.png</Image>
        </ImageEntity>
    </Entities>
    <Levels>
        <Level>
            <ID>1</ID>
            <NextLevel>1</NextLevel>
            <EndCondition>DestroyAll Bird</EndCondition>
            <ImageEntityInstances>
                <ImageEntityInstance>
                    <Type>Bird</Type>
                    <XPos>100</XPos>
                    <YPos>400</YPos>
                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Type>PipeUp</Type>
                    <XPos>1200</XPos>
                    <YPos>0</YPos>
                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Type>PipeDown</Type>
                    <XPos>1200</XPos>
                    <YPos>500</YPos>
                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Type>PipeUp</Type>
                    <XPos>1400</XPos>
                    <YPos>0</YPos>
                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Type>PipeDown</Type>
                    <XPos>1400</XPos>
                    <YPos>500</YPos>
                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Type>PipeUp</Type>
                    <XPos>1600</XPos>
