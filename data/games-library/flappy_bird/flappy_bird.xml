                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Type>PipeDown</Type>
                    <XPos>1600</XPos>
                    <YPos>500</YPos>
                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Type>PipeUp</Type>
                    <XPos>1800</XPos>
