<Game>
    <Name>Flappy Bird</Name>
    <Thumbnail>flappy_bird_icon.png</Thumbnail>
    <Description>Play the classic game that got millions of people hooked</Description>
    <Entities>
        <ImageEntity>
            <Name>Bird</Name>
            <Width>50</Width>
            <Height>50</Height>
            <Image>flappybird.jpg</Image>
            <VariableNames>GoingDown GoingUp</VariableNames>
            <VariableValues>flappy_bird/flappy_down.png flappy_bird/flappy_up.png</VariableValues>
            <Behaviors>
                <Behavior>
                    <InputCondition>
                        <Key>UpKey</Key>
                        <InputRequirement>Pressed</InputRequirement>
                        <IndependentAction>
                            <Effect>Jump 0 -0.8 + 10.0</Effect>
                            <Effect>SetImage GoingUp</Effect>
                        </IndependentAction>
                    </InputCondition>
                </Behavior>
                <Behavior>
                    <InputCondition>
                        <Key>UpKey</Key>
                        <InputRequirement>false</InputRequirement>
                    </InputCondition>
                    <IndependentAction>
                        <Effect>SetImage GoingDown</Effect>
                    </IndependentAction>
                </Behavior>
                <Behavior>
                    <IndependentAction>
                        <Effect>Gravity 0. 0.07 + 10.0</Effect>
                    </IndependentAction>
                </Behavior>
                <Behavior>
                    <RequiredCollisionCondition>
                        <Entity2>PipeUp</Entity2>
                        <Direction>ANY</Direction>
                    </RequiredCollisionCondition>
                    <IndependentAction>
                        <Effect>ChangeVariable Lives + -1.0</Effect>
                        <Effect>Respawn RespawnXLocation RespawnYLocation</Effect>
                    </IndependentAction>
                </Behavior>
                <Behavior>
                    <RequiredCollisionCondition>
                        <Entity2>PipeDown</Entity2>
                        <Direction>ANY</Direction>
                    </RequiredCollisionCondition>
                    <IndependentAction>
                        <Effect>ChangeVariable Lives + -1.0</Effect>
                        <Effect>Respawn RespawnXLocation RespawnYLocation</Effect>
                    </IndependentAction>
                </Behavior>
                <Behavior>
                    <RequiredCollisionCondition>
                        <Entity2>universalTerrain</Entity2>
                        <Direction>Down</Direction>
                    </RequiredCollisionCondition>
                    <CollisionDeterminedAction>
                        <Args>universalTerrain Down</Args>
                        <Effect>TerrainCollisionDown</Effect>
                        <Effect>SetImage flappy_bird/flappydie.png</Effect>
                        <Effect>ChangeVariable Lives + -1.0</Effect>
                    </CollisionDeterminedAction>
                </Behavior>
                <Behavior>
                    <GameVariableCondition>
                        <VariableName>Lives</VariableName>
                        <RequiredValue>0.0</RequiredValue>
                    </GameVariableCondition>
                    <IndependentAction>
                        <Effect>GoToLevel 1</Effect>
                        <Effect>SetVariable Lives 1.0</Effect>
                        <Effect>SetVariable Score 0.0</Effect>
                    </IndependentAction>
                </Behavior>
                <Behavior>
                    <IndependentAction>
                        <Effect>VelocityInput .100 0 + .0400</Effect>
                    </IndependentAction>
                </Behavior>
            </Behaviors>
        </ImageEntity>
        <ImageEntity>
            <Name>Floor</Name>
            <Width>1000</Width>
            <Height>50</Height>
            <Image>floor.png</Image>
            <VariableNames>TerrainID</VariableNames>
            <VariableValues>universalTerrain</VariableValues>
        </ImageEntity>
        <ImageEntity>
            <Name>Background</Name>
            <Width>1000</Width>
            <Height>800</Height>
            <Image>flappy_background.png</Image>
        </ImageEntity>
        <ImageEntity>
            <Name>PipeUp</Name>
            <Width>50</Width>
            <Height>400</Height>
            <Image>pipe_up.png</Image>
        </ImageEntity>
        <ImageEntity>
            <Name>PipeDown</Name>
            <Width>50</Width>
            <Height>150</Height>
            <Image>pipe_down.png</Image>
        </ImageEntity>
    </Entities>
    <Variables>
        <Variable>
            <Name>Score</Name>
            <StartValue>0</StartValue>
        </Variable>
        <Variable>
            <Name>Lives</Name>
            <StartValue>1</StartValue>
        </Variable>
    </Variables>
    <Levels>
        <Level>
            <ID>1</ID>
            <NextLevel>1</NextLevel>
            <EndCondition>DestroyAll Bird</EndCondition>
            <ImageEntityInstances>
                <ImageEntityInstance>
                    <Name>Background</Name>
                    <XPos>0</XPos>
                    <YPos>0</YPos>
                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Name>Floor</Name>
                    <XPos>0</XPos>
                    <YPos>700</YPos>
                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Name>Bird</Name>
                    <XPos>100</XPos>
                    <YPos>500</YPos>
                    <VariableNames>RespawnXLocation RespawnYLocation</VariableNames>
                    <VariableValues>100 500</VariableValues>
                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Name>PipeUp</Name>
                    <XPos>500</XPos>
                    <YPos>300</YPos>
                </ImageEntityInstance>
                <ImageEntityInstance>
                    <Name>PipeDown</Name>
                    <XPos>500</XPos>
                    <YPos>0</YPos>
                </ImageEntityInstance>
            </ImageEntityInstances>
            <TextEntityInstances>
                <TextEntityInstance>
                    <Text>Score: %.0f</Text>
                    <Font>Times New Roman</Font>
                    <XPos>850</XPos>
                    <YPos>0</YPos>
                    <Width>150</Width>
                    <Height>50</Height>
                    <PropertyVariableDependency>
                        <VariableName>Score</VariableName>
                        <PropertyName>Text</PropertyName>
                    </PropertyVariableDependency>
                </TextEntityInstance>
            </TextEntityInstances>
        </Level>
    </Levels>
</Game>