<Game>
  <Name>Super Mario Bros</Name>
  <Thumbnail>mario_logo.jpg</Thumbnail>
  <Description>Straight from the mind of Shigeru Miyamoto.</Description>
  <Entities>
    <ImageEntity>
      <Name>SmallMario</Name>
      <Width>100</Width>
      <Height>120</Height>
      <Image>mario.png</Image>
      <Movement>
        <MovementBehavior>Gravity 0 0.0</MovementBehavior>
      </Movement>
      <Controls>
        <ControlInput>
          <Key>UpKey2Pressed</Key>
          <ControlBehavior>JumpBehavior -1.2</ControlBehavior>
        </ControlInput>
        <ControlInput>
          <Key>DownKey2</Key>
          <ControlBehavior>VelocityInput 0 .1600 .3200</ControlBehavior>
        </ControlInput>
        <ControlInput>
          <Key>LeftKey2</Key>
          <ControlBehavior>VelocityInput -.1600 0 .3200</ControlBehavior>
        </ControlInput>
        <ControlInput>
          <Key>RightKey2</Key>
          <ControlBehavior>VelocityInput .1600 0 .3200</ControlBehavior>
        </ControlInput>
      </Controls>
      <Collisions>
        <EntityCollision>
          <With>Koopa</With>
          <Reaction>RemoveSelf</Reaction>
        </EntityCollision>
        <EntityCollision>
          <With>Brick</With>
          <Reaction>TerrainCollision</Reaction>
        </EntityCollision>
      </Collisions>
    </ImageEntity>
    <ImageEntity>
      <Name>Koopa</Name>
      <Width>100</Width>
      <Height>120</Height>
      <Image>koopa.png</Image>
      <Movement>
        <MovementBehavior>MoveForward -.45 0</MovementBehavior>
      </Movement>
      <Collsions>
        <EntityCollision>
          <With>Brick</With>
          <Reaction>TerrainCollision</Reaction>
        </EntityCollision>
      </Collsions>
    </ImageEntity>
    <ImageEntity>
      <Name>Brick</Name>
      <Width>100</Width>
      <Height>100</Height>
      <Image>brick.png</Image>
    </ImageEntity>
  </Entities>
  <Levels>
    <Level>
      <ID>1</ID>
      <ImageEntityInstances>
        <ImageEntityInstance>
          <Type>SmallMario</Type>
          <XPos>0</XPos>
          <YPos>0</YPos>
        </ImageEntityInstance>
        <ImageEntityInstance>
          <Type>Brick</Type>
          <XPos>300</XPos>
          <YPos>600</YPos>
        </ImageEntityInstance>
        <ImageEntityInstance>
          <Type>Brick</Type>
          <XPos>400</XPos>
          <YPos>600</YPos>
        </ImageEntityInstance>
        <ImageEntityInstance>
          <Type>Brick</Type>
          <XPos>500</XPos>
          <YPos>500</YPos>
          <Size>2.0</Size>
        </ImageEntityInstance>
        <ImageEntityInstance>
          <Type>Koopa</Type>
          <XPos>800</XPos>
          <YPos>500</YPos>
        </ImageEntityInstance>
      </ImageEntityInstances>
    </Level>
  </Levels>
</Game>