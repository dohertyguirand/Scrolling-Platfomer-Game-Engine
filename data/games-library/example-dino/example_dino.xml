<Game>
  <Name>Chrome Dino</Name>
  <Thumbnail>dino_logo.jpg</Thumbnail>
  <Description>Back from the jurassic period to entertain you while your wifi is down.</Description>
  <Entities>
    <ImageEntity>
      <Name>Dino</Name>
      <Width>100</Width>
      <Height>100</Height>
      <Image>googe_dino.png</Image>
      <Movement>
        <MovementBehavior>Gravity 0 0.1</MovementBehavior>
      </Movement>
      <Controls>
        <ControlInput>
          <Key>UpKey</Key>
          <ControlBehavior>JumpBehavior -1.2</ControlBehavior>
        </ControlInput>
      </Controls>
      <Collisions>
        <EntityCollision>
          <With>Cactus</With>
          <Reaction>RemoveSelf</Reaction>
          <!--><Reaction>ChangeVariable Lives -1.0</Reaction><!-->
          <Reaction>ChangeVariable Lives -1.0</Reaction>
        </EntityCollision>
      </Collisions>
    </ImageEntity>
    <ImageEntity>
      <Name>Cactus</Name>
      <Width>100</Width>
      <Height>100</Height>
      <Image>cactus.png</Image>
      <Movement>
        <MovementBehavior>MoveForward -.45 0</MovementBehavior>
      </Movement>
    </ImageEntity>
  </Entities>
  <Variables>
    <Variable>
      <Name>Lives</Name>
      <StartValue>3</StartValue>
    </Variable>
  </Variables>
  <Levels>
    <Level>
      <ID>1</ID>
      <EndCondition>DestroyAll Dino</EndCondition>
      <ImageEntityInstances>
        <ImageEntityInstance>
          <Type>Dino</Type>
          <XPos>100</XPos>
          <YPos>400</YPos>
        </ImageEntityInstance>
        <ImageEntityInstance>
          <Type>Cactus</Type>
          <XPos>1200</XPos>
          <YPos>400</YPos>
        </ImageEntityInstance>
        <ImageEntityInstance>
          <Type>Cactus</Type>
          <XPos>1600</XPos>
          <YPos>400</YPos>
        </ImageEntityInstance>
        <ImageEntityInstance>
          <Type>Cactus</Type>
          <XPos>2000</XPos>
          <YPos>400</YPos>
        </ImageEntityInstance>
        <ImageEntityInstance>
          <Type>Cactus</Type>
          <XPos>2400</XPos>
          <YPos>400</YPos>
        </ImageEntityInstance>
        <ImageEntityInstance>
          <Type>Cactus</Type>
          <XPos>2800</XPos>
          <YPos>400</YPos>
        </ImageEntityInstance>
      </ImageEntityInstances>
    </Level>
  </Levels>
</Game>