<Game>
  <Name>Chrome Dino</Name>
  <Thumbnail>dino_logo.jpg</Thumbnail>
  <Description>Back from the jurassic period to entertain you while your wifi is down.</Description>
  <Entities>
    <Entity>
      <Name>Dino</Name>
      <Width>100</Width>
      <Height>100</Height>
      <Image>googe_dino.png</Image>
      <Movement>
        <MovementBehavior>Gravity 0.1</MovementBehavior>
      </Movement>
      <Controls>
        <ControlInput>
          <Key>UpKey</Key>
          <ControlBehavior>JumpBehavior -1.2</ControlBehavior>
        </ControlInput>
      </Controls>
      <Collisions>
        <EntityCollision>
          <With>Cactus</With>
          <Reaction>RemoveSelf</Reaction>
        </EntityCollision>
      </Collisions>
    </Entity>
    <Entity>
      <Name>Cactus</Name>
      <Width>100</Width>
      <Height>100</Height>
      <Image>koopa.png</Image>
      <Movement>
        <MovementBehavior>MoveForward -.45</MovementBehavior>
      </Movement>
    </Entity>
  </Entities>
  <Levels>
    <Level>
      <ID>1</ID>
      <EndCondition>DestroyAll Dino</EndCondition>
