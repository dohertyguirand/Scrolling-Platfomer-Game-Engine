            <Image>waterTerrain.jpg</Image>
        </ImageEntity>
        <ImageEntity>
            <Name>RedDiamond</Name>
            <Width>40</Width>
            <Height>40</Height>
            <Image>redDiamond.jpg</Image>
            <Collisions>
                <EntityCollision>
                    <With>Fireboy</With>
                    <Reaction>RemoveSelf</Reaction>
                </EntityCollision>
            </Collisions>
        </ImageEntity>
        <ImageEntity>
            <Name>BlueDiamond</Name>
            <Width>40</Width>
            <Height>40</Height>
            <Image>blueDiamond.png</Image>
            <Collisions>
                <EntityCollision>
                    <With>Watergirl</With>
                    <Reaction>RemoveSelf</Reaction>
                </EntityCollision>
            </Collisions>
        </ImageEntity>
        <ImageEntity>
            <Name>RedDoor</Name>
            <Width>50</Width>
            <Height>70</Height>
            <Image>redDoor.jpg</Image>
        </ImageEntity>
        <ImageEntity>
            <Name>BlueDoor</Name>
            <Width>50</Width>
            <Height>70</Height>
            <Image>blueDoor.jpg</Image>
        </ImageEntity>
