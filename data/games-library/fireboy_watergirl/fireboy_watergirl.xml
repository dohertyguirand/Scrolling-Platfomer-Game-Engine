<Game>
    <Name>Fireboy and Watergirl</Name>
    <Thumbnail>fireboy_watergirl_preview.jpg</Thumbnail>
    <Description>A cooperative two-player game featuring elemental royalty.</Description>
    <Entities>
        <ImageEntity>
            <Name>Fireboy</Name>
            <Width>50</Width>
            <Height>100</Height>
            <Image>fireboy.png</Image>
            <Movement>
                <MovementBehavior>Gravity 0 0.1</MovementBehavior>
            </Movement>
            <Controls>
                <ControlInput>
                    <Key>UpKeyPressed</Key>
                    <ControlBehavior>JumpBehavior -1.2</ControlBehavior>
                </ControlInput>
                <ControlInput>
                    <Key>LeftKey</Key>
                    <ControlBehavior>VelocityInput -.1600 0 .3200</ControlBehavior>
                </ControlInput>
                <ControlInput>
                    <Key>RightKey</Key>
                    <ControlBehavior>VelocityInput .1600 0 .3200</ControlBehavior>
                </ControlInput>
            </Controls>
            <Collisions>
                <EntityCollision>
                    <With>WaterTerrain</With>
                    <Reaction>RemoveSelf</Reaction>
                </EntityCollision>
                <EntityCollision>
                    <With>Floor</With>
                    <Reaction>StopDownwardVelocity</Reaction>
                </EntityCollision>
            </Collisions>
        </ImageEntity>
        <ImageEntity>
            <Name>Watergirl</Name>
            <Width>50</Width>
            <Height>100</Height>
            <Image>watergirl.png</Image>
            <Movement>
                <MovementBehavior>Gravity 0 0.1</MovementBehavior>
            </Movement>
            <Controls>
                <ControlInput>
                    <Key>UpKey2Pressed</Key>
                    <ControlBehavior>JumpBehavior -1.2</ControlBehavior>
                </ControlInput>
                <ControlInput>
                    <Key>LeftKey2</Key>
                    <ControlBehavior>VelocityInput -.1600 0 .3200</ControlBehavior>
                </ControlInput>
                <ControlInput>
                    <Key>RightKey2</Key>
                    <ControlBehavior>VelocityInput .1600 0 .3200</ControlBehavior>
                </ControlInput>
            </Controls>
            <Collisions>
                <EntityCollision>
                    <With>LavaTerrain</With>
                    <Reaction>RemoveSelf</Reaction>
                </EntityCollision>
                <EntityCollision>
                    <With>Floor</With>
                    <Reaction>StopDownwardVelocity</Reaction>
                </EntityCollision>
            </Collisions>
        </ImageEntity>
        <ImageEntity>
            <Name>Floor</Name>
            <Width>200</Width>
            <Height>100</Height>
            <Image>floorBrick.png</Image>
        </ImageEntity>
        <ImageEntity>
            <Name>LavaTerrain</Name>
            <Width>100</Width>
            <Height>50</Height>
            <Image>lavaTerrain.jpg</Image>
        </ImageEntity>
        <ImageEntity>
            <Name>WaterTerrain</Name>
            <Width>100</Width>
