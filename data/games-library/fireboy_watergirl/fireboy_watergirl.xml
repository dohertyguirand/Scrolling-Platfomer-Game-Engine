<Game>
    <Name>Fireboy and Watergirl</Name>
    <Thumbnail>fireboy_watergirl_preview.jpg</Thumbnail>
    <Description>A cooperative two-player game featuring elemental royalty.</Description>
    <Entities>
        <Entity>
            <Name>Fireboy</Name>
            <Width>50</Width>
            <Height>100</Height>
            <Image>fireboy.png</Image>
            <Movement>
                <MovementBehavior>Gravity 0.1</MovementBehavior>
            </Movement>
            <Controls>
                <ControlInput>
                    <Key>UpKey</Key>
                    <ControlBehavior>JumpBehavior -1.2</ControlBehavior>
                </ControlInput>
                <ControlInput>
                    <Key>LeftKey</Key>
                    <ControlBehavior>MoveBehavior -1.2</ControlBehavior>
                </ControlInput>
                <ControlInput>
                    <Key>RightKey</Key>
                    <ControlBehavior>MoveBehavior 1.2</ControlBehavior>
                </ControlInput>
            </Controls>
            <Collisions>
                <EntityCollision>
                    <With>WaterTerrain</With>
                    <Reaction>RemoveSelf</Reaction>
                </EntityCollision>
                <EntityCollision>
                    <With>Floor</With>
                    <Reaction>StopDownwardVelocity</Reaction>
                </EntityCollision>
            </Collisions>
        </Entity>
        <Entity>
            <Name>Watergirl</Name>
            <Width>50</Width>
            <Height>100</Height>
