                </ControlInput>
                <ControlInput>
                    <Key>RightKey2</Key>
                    <ControlBehavior>MoveBehavior 1.2</ControlBehavior>
                </ControlInput>
            </Controls>
            <Collisions>
                <EntityCollision>
                    <With>LavaTerrain</With>
                    <Reaction>RemoveSelf</Reaction>
